{#
/**
 * @file
 * Theme override for node edit pages.
 *
 * Simplified layout focused on content editing forms.
 * Removes sidebar to provide more space for editing.
 * Perfect for content creation and editing workflows.
 */
#}

<div class="add-node-page layout-container flex h-screen bg-gray-50 overflow-hidden font-sans">

  {# Mobile Overlay #}
  <div class="js-sidebar-overlay sidebar-overlay hidden md:hidden"></div>

  {# Sidebar #}
  {% include '@intranet_megamidia/includes/sidebar.html.twig' %}

  {# Main Content Wrapper - Full Width #}
  <div class="layout-main-wrapper flex-1 flex flex-col min-w-0 overflow-hidden">

    {# Header - Simplified for editing #}
    {% include '@intranet_megamidia/includes/header.html.twig' %}

    {# Main Content - Full Width for Editing #}
    <main id="main-content" class="layout-content flex-1 overflow-y-auto p-4 md:p-8 scroll-smooth">
      <div class="layout-content-inner max-w-4xl mx-auto">

        {# Breadcrumb / Context #}
        <div class="mb-6">
          <nav class="flex items-center space-x-2 text-sm text-gray-600">
            <a href="{{ path('<front>') }}" class="hover:text-brand-600 transition-colors">{{ 'Início'|t }}</a>
            <span class="text-gray-400">/</span>
            <span class="text-gray-900 font-medium">{{ node_type_label|default('Editar Conteúdo'|t) }}</span>
          </nav>
        </div>

        {# Page Title Block #}
        {% if page.title %}
          <div class="mb-6">
            {{ page.title }}
          </div>
        {% endif %}

        {# Page Title - Dynamic based on content type #}
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-gray-900">
            {% if node_type_label %}
              {{ 'Editar'|t }} {{ node_type_label }}
            {% else %}
              {{ 'Editar Conteúdo'|t }}
            {% endif %}
          </h1>
          <p class="text-gray-600 mt-2">
            {{ 'Faça as alterações necessárias e salve suas mudanças'|t }}
          </p>
        </div>

        {# Messages #}
        {% if page.highlighted %}
          <div class="mb-6">
            {{ page.highlighted }}
          </div>
        {% endif %}

        {# Help Region #}
        {% if page.help %}
          <div class="mb-6">
            {{ page.help }}
          </div>
        {% endif %}

        {# Page Content - Form in Card #}
        <div class="animate-fade-in">
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
            {# Form Header with Actions #}
            <div class="px-6 py-4 border-b border-gray-100 bg-gray-50 flex items-center justify-between">
              <div class="flex items-center space-x-4">
                {% if node_id %}
                  <div class="flex items-center space-x-2">
                    <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                    <span class="text-sm text-gray-600">{{ 'Rascunho'|t }}</span>
                  </div>
                  {% if node_created_formatted %}
                    <span class="text-sm text-gray-500">
                      {{ 'Criado em'|t }} {{ node_created_formatted }}
                    </span>
                  {% endif %}
                {% else %}
                  <span class="text-sm text-gray-600">{{ 'Novo conteúdo'|t }}</span>
                {% endif %}
              </div>

              {# Quick Actions #}
              <div class="flex items-center space-x-3">
                {% if node_id %}
                  <a href="{{ path('entity.node.canonical', {'node': node_id}) }}"
                     class="inline-flex items-center px-3 py-1.5 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors">
                    {% include '@intranet_megamidia/includes/icons.html.twig' with {'icon': 'eye', 'class': 'w-4 h-4 mr-1'} %}
                    {{ 'Visualizar'|t }}
                  </a>
                {% endif %}
              </div>
            </div>

            {# Form Content #}
            <div class="p-6 md:p-8">
              {{ page.content }}
            </div>
          </div>
        </div>

      </div>
    </main>

    {# Footer #}
    {% if page.footer %}
      {% include '@intranet_megamidia/includes/footer.html.twig' %}
    {% endif %}

  </div>
</div>
