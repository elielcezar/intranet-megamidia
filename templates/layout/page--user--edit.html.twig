{#
/**
 * @file
 * Theme override for user edit pages.
 *
 * Uses the standard intranet layout with sidebar, header, and main content area.
 * Perfect for user profile editing pages.
 */
#}

<div class="edit-user-page layout-container flex h-screen bg-gray-50 overflow-hidden font-sans">

  {# Mobile Overlay #}
  <div class="js-sidebar-overlay sidebar-overlay hidden md:hidden"></div>

  {# Sidebar #}
  {% include '@intranet_megamidia/includes/sidebar.html.twig' %}

  {# Main Content Wrapper #}
  <div class="layout-main-wrapper flex-1 flex flex-col min-w-0 overflow-hidden">

    {# Header #}
    {% include '@intranet_megamidia/includes/header.html.twig' %}

    {# Main Content #}
    <main id="main-content" class="layout-content flex-1 overflow-y-auto p-4 md:p-8 scroll-smooth">
      <div class="layout-content-inner max-w-2xl mx-auto">

        {# Page Title #}
        <div class="mb-6">
          <h1 class="text-3xl font-bold text-gray-900">{{ 'Editar Perfil'|t }}</h1>
          <p class="text-gray-600 mt-2">{{ 'Atualize suas informações pessoais e preferências'|t }}</p>
        </div>

        {# Messages #}
        {% if page.highlighted %}
          <div class="mb-6">
            {{ page.highlighted }}
          </div>
        {% endif %}

        {# Help Region #}
        {% if page.help %}
          <div class="mb-6">
            {{ page.help }}
          </div>
        {% endif %}

        {# Page Content #}
        <div class="animate-fade-in">
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 md:p-8">
            {{ page.content }}
          </div>
        </div>

      </div>
    </main>

    {# Footer #}
    {% if page.footer %}
      {% include '@intranet_megamidia/includes/footer.html.twig' %}
    {% endif %}

  </div>
</div>
