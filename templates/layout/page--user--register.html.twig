{#
/**
 * @file
 * Theme override for the registration page.
 * 
 * Split-screen layout:
 * - Left: Branding/image
 * - Right: Registration form
 */
#}

<div class="auth-page min-h-screen flex">
  
  {# Left Side - Branding #}
  <div class="auth-page__branding hidden lg:flex lg:w-1/2 bg-gradient-to-br from-brand-600 via-brand-700 to-brand-900 relative overflow-hidden">
    
  
    {# Content #}
    <div class="relative z-10 flex flex-col justify-center items-center w-full p-12 text-white">
      
      {# Logo #}
      <div class="mb-12">        
        <img src="{{ base_path }}{{ directory }}/css/assets/logo-login.png" alt="Logo MegaMidia" class="w-full h-full object-contain max-w-60">        
      </div>      
      
      {# Welcome Text #}
      <h1 class="text-4xl font-bold mb-4 text-center">
        {{ 'Intranet'|t }}
      </h1>
      
    </div>
  </div>
  
  {# Right Side - Form #}
  <div class="auth-page__form w-full lg:w-1/2 flex items-center justify-center p-8 bg-gray-50">
    <div class="w-full max-w-md">
      
      {# Mobile Logo #}
      <div class="lg:hidden mb-8 text-center">
        <div class="w-16 h-16 bg-brand-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 2L2 7l10 5 10-5-10-5z"/>
            <path d="M2 17l10 5 10-5"/>
            <path d="M2 12l10 5 10-5"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900">{{ 'Intranet'|t }}</h2>
      </div>
      
      {# Form Header #}
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">
          {{ 'Criar conta'|t }}
        </h2>       
      </div>
      
      {# Messages #}
      {% if page.highlighted %}
        <div class="mb-6">
          {{ page.highlighted }}
        </div>
      {% endif %}
      
      {# Registration Form #}
      <div class="auth-form bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
        {{ page.content }}
      </div>
      
      {# Links #}
      <div class="mt-6 text-center space-y-4">
        <p class="text-gray-500">
          {{ 'JÃ¡ tem uma conta?'|t }}
          <a href="{{ path('user.login') }}" class="text-brand-600 font-semibold hover:text-brand-700">
            {{ 'Entrar'|t }}
          </a>
        </p>
      </div>
      
    </div>
  </div>
  
</div>

