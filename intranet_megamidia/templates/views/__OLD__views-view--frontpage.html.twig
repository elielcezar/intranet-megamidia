{#
/**
 * @file
 * Theme override for the Dashboard/Frontpage view.
 *
 * This is the main dashboard layout based on DashboardView from App.tsx.
 * Shows featured announcement, recent announcements grid, events widget, and documents widget.
 *
 * Available variables:
 * - rows: The view results.
 * - header: The optional header.
 * - footer: The optional footer.
 * - pager: The pager element.
 *
 * @see template_preprocess_views_view()
 */
#}

{% set featured_view = drupal_view('destaque_home', 'block_1') %}
{% set comunicados_view = drupal_view('comunicados_home', 'block_1') %}
{% set eventos_view = drupal_view('eventos_home', 'block_1') %}


{# Mock data for static mockup #}
{% set mock_documents = [
  {
    'id': 'd1',
    'name': 'Manual do Colaborador 2024.pdf',
    'type': 'PDF',
    'size': '2.4 MB',
  },
  {
    'id': 'd2',
    'name': 'Planilha de Reembolso.xlsx',
    'type': 'XLSX',
    'size': '45 KB',
  },
  {
    'id': 'd3',
    'name': 'Template de Apresentação Corp.pptx',
    'type': 'PPTX',
    'size': '5.1 MB',
  },
] %}

<div class="dashboard-view space-y-8 animate-fade-in">
  
  {# ===== Hero Section - Featured Announcement ===== #}
  {# ===== Hero Section - Featured Announcement ===== #}
  <section class="hero-section">
    {{ featured_view }}
  </section>

  {# ===== Main Content Grid ===== #}
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    {# ----- Left Column: Recent Announcements ----- #}
    <div class="lg:col-span-2 space-y-6">
      
      <div class="flex items-center justify-between">
        <h3 class="text-xl font-bold text-gray-900">{{ 'Últimos Comunicados'|t }}</h3>
      </div>
      
      {# Announcements Grid #}
      <div class="grid sm:grid-cols-2 gap-6">
        {% for announcement in mock_announcements|slice(1) %}
          <div class="card mini-card bg-white p-6 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            
            {# Header #}
            <div class="mini-card__header flex justify-between items-start mb-4">
              <span class="badge px-2 py-1 text-xs font-medium rounded-md {{ announcement.category_class }}">
                {{ announcement.category }}
              </span>
              <span class="text-xs text-gray-400">{{ announcement.date }}</span>
            </div>
            
            {# Title #}
            <h4 class="mini-card__title font-bold text-gray-900 mb-2 line-clamp-2">
              {{ announcement.title }}
            </h4>
            
            {# Excerpt #}
            <p class="mini-card__excerpt text-sm text-gray-500 mb-4 line-clamp-3">
              {{ announcement.excerpt }}
            </p>
            
            {# Read More #}
            <a href="/comunicados" class="mini-card__link text-sm font-medium text-brand-600 hover:underline">
              {{ 'Ler mais'|t }}
            </a>
            
          </div>
        {% endfor %}
      </div>
      
    </div>

    {# ----- Right Column: Events & Documents Widgets ----- #}
    <div class="space-y-8">
      
      {# Events Widget #}
      <div class="card bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
        <div class="flex items-center justify-between mb-6">
          <h3 class="font-bold text-gray-900">{{ 'Próximos Eventos'|t }}</h3>
          <a href="/agenda" class="text-sm text-brand-600 hover:text-brand-800">
            {{ 'Ver tudo'|t }}
          </a>
        </div>
        
        <div class="space-y-4">
          {% for event in mock_events %}
            <div class="flex gap-4 items-start">
              {# Date Widget #}
              <div class="date-widget flex-shrink-0 w-12 h-12 bg-brand-50 rounded-xl flex flex-col items-center justify-center text-brand-700 border border-brand-100">
                <span class="date-widget__month text-xs font-bold uppercase">
                  {{ event.date|date('M')|slice(0, 3) }}
                </span>
                <span class="date-widget__day text-lg font-bold leading-none">
                  {{ event.date|date('d') }}
                </span>
              </div>
              {# Event Info #}
              <div>
                <h5 class="font-semibold text-gray-900 text-sm">{{ event.title }}</h5>
                <p class="text-xs text-gray-500 mt-1">{{ event.time }} • {{ event.location }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      {# Documents Widget #}
      <div class="card bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
        <div class="flex items-center justify-between mb-6">
          <h3 class="font-bold text-gray-900">{{ 'Documentos Rápidos'|t }}</h3>
          <a href="/documentos" class="text-sm text-brand-600 hover:text-brand-800">
            {{ 'Ver tudo'|t }}
          </a>
        </div>
        
        <ul class="space-y-3">
          {% for doc in mock_documents %}
            {% set type_classes = {
              'PDF': 'bg-red-100 text-red-600',
              'XLSX': 'bg-green-100 text-green-600',
              'DOCX': 'bg-blue-100 text-blue-600',
              'PPTX': 'bg-orange-100 text-orange-600',
            } %}
            <li class="doc-row flex items-center gap-3 p-2 hover:bg-gray-50 rounded-lg transition-colors cursor-pointer group">
              {# Icon #}
              <div class="doc-row__icon w-8 h-8 rounded flex items-center justify-center {{ type_classes[doc.type]|default('bg-gray-100 text-gray-500') }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                  <polyline points="14 2 14 8 20 8"/>
                </svg>
              </div>
              {# Info #}
              <div class="doc-row__info flex-1 min-w-0">
                <p class="doc-row__name text-sm font-medium text-gray-700 truncate group-hover:text-brand-600 transition-colors">
                  {{ doc.name }}
                </p>
                <p class="doc-row__size text-xs text-gray-400">{{ doc.size }}</p>
              </div>
              {# Download Icon #}
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="doc-row__download w-4 h-4 text-gray-300 group-hover:text-brand-500 transition-colors">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7 10 12 15 17 10"/>
                <line x1="12" x2="12" y1="15" y2="3"/>
              </svg>
            </li>
          {% endfor %}
        </ul>
      </div>
      
    </div>
  </div>
  
  {# Drupal View Rows (if provided) #}
  {% if rows %}
    <div class="drupal-view-content mt-8">
      {{ rows }}
    </div>
  {% endif %}
  
  {# Pager #}
  {% if pager %}
    {{ pager }}
  {% endif %}
  
</div>

